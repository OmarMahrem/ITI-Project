@model Product

<div class="container mt-5">
    <h2>Product Details</h2>
    <p><strong>Name:</strong> @Model.Title</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Category:</strong> @Model.Category.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Image:</strong></p>
    <img src="~/@Model.ImagePath" alt="Image" />
    <br />
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
